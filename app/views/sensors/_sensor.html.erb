<div class="sensor">
	<h4><%= sensor.name %></h4>
  <p class="limit">Valor m√°ximo permitido: <%= "#{sensor.limit} #{sensor.data_type}" %></p>
	<ul class="packages">
		<% sensor.packages.order(created_at: :desc).first(5).each do |package| %>
			<li class="<%= "alert" if package.data > sensor.limit %>" data-url="<%= admin_package_url(package) %>">
				<span class="data"><%= package.data %> <%= sensor.data_type %></span><br>
				<%= package.created_at.to_s(:short) %>
			</li>
		<% end %>
	</ul>
</div>